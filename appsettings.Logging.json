{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%HOMEPATH%\\Logs\\Debug.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "Date={Timestamp:yyy/MM/dd},Time={Timestamp:HH:mm:ss.ffffzzz},Thread={ThreadId},Level={Level:u},SourceContext={SourceContext},{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  }
}
